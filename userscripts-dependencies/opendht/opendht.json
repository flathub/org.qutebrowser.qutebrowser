{
    "name": "opendht",
    "buildsystem": "cmake",
    "build-options": {
        "cxxflags": "-DMSGPACK_NO_BOOST"
    },
    "config-opts": [
        "-DOPENDHT_STATIC=OFF",
        "-DOPENDHT_LOG=OFF",
        "-DOPENDHT_PYTHON=ON",
        "-DOPENDHT_TOOLS=OFF",
        "-DOPENDHT_PROXY_SERVER=ON",
        "-DOPENDHT_PUSH_NOTIFICATIONS=ON",
        "-DOPENDHT_PROXY_CLIENT=ON",
        "-DOPENDHT_INDEX=ON",
        "-DOPENDHT_TESTS_NETWORK=OFF",
        "-DOPENDHT_DOCUMENTATION=OFF"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/savoirfairelinux/opendht/archive/2.3.2/opendht-2.3.2.tar.gz",
            "sha256": "5a646e494ad9130f94beed18dc310242e896822cb9c6ffa9f2f06b9ef5c7fe8d",
            "x-checker-data": {
                "type": "anitya",
                "project-id": 12935,
                "stable-only": true,
                "url-template": "https://github.com/savoirfairelinux/opendht/archive/$version/opendht-$version.tar.gz"
            }
        },
        {
            "type": "patch",
            "path": "opendht-python-install.patch"
        }
    ],
    "modules": [
        "asio/asio.json",
        "jsoncpp/jsoncpp.json",
        "msgpack-c/msgpack-c.json",
        "msgpack-cxx/msgpack-cxx.json",
        "restinio/restinio.json",
        "boost/boost.json"
    ]
}
