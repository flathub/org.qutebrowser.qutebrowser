{
    "name": "asciidoc",
    "buildsystem": "simple",
    "build-commands": [
        "python setup.py build",
        "python setup.py install --prefix=/app --root=/ --optimize=1",
        "_pyver=$(python -c 'import sys; print(\"%s.%s\" %sys.version_info[0:2])'); install asciidoc/resources/docbook-xsl/*.xsl -t ${FLATPAK_DEST}/lib/python${_pyver}/site-packages/asciidoc/resources/docbook-xsl"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/asciidoc-py/asciidoc-py/archive/10.2.0/asciidoc-10.2.0.tar.gz",
            "sha256": "684ea53c1f5b71d6d1ac6086bbc96906b1f709ecc7ab536615b0f0c9e1baa3cc",
            "x-checker-data": {
                "type": "html",
                "url": "https://asciidoc-py.github.io/",
                "version-pattern": "AsciiDoc ([\\d\\.-]+) Released",
                "url-template": "https://github.com/asciidoc-py/asciidoc-py/archive/$version/asciidoc-$version.tar.gz"
            }
        }
    ],
    "cleanup": [
        "*"
    ]
}
